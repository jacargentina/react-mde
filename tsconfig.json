{
  "include": ["./src/**/*.tsx"],
  "exclude": ["**/__tests__/**", "cypress/**"],
  "compilerOptions": {
    "outDir": "lib",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "jsx": "react-jsx",
    "declaration": true,
    "noImplicitAny": false,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
