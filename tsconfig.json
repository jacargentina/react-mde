{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "outDir": "lib",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "jsx": "react-jsx",
    "declaration": true,
    "noImplicitAny": false,
    "target": "ES2019",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "~": ["./src/react-mde.d.ts"],
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["**/__tests__/**", "cypress/**"]
}
