{
  "include": ["./react-mde.d.ts", "./src/**/*.ts", "./src/**/*.tsx", "./docs/*.tsx"],
  "compilerOptions": {
    "outDir": "lib",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "jsx": "react-jsx",
    "declaration": true,
    "noImplicitAny": false,
    "target": "ES2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["**/__tests__/**", "cypress/**"]
}
