{
  "name": "@javier.alejandro.castro/react-mde",
  "version": "11.0.15",
  "description": "React Markdown Editor",
  "type": "module",
  "main": "./lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "prepare": "npm run build && npm run build-demo",
    "postversion": "npm run ghpages && git add . && git commit -m 'rebuild docs'",
    "test": "jest",
    "build": "cross-env NODE_ENV=production esbuild --bundle ./src/index.tsx --outdir=lib --minify",
    "build-demo": "esbuild --bundle ./demo/client.tsx --outfile=./demo/bundle.js --minify --charset=utf8",
    "dev": "node esbuild.config.js -w",
    "ghpages": "webpack --config webpack.config.ghpages.js",
    "cypress:open": "cypress open",
    "lint": "eslint 'src/**'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacargentina/react-mde.git"
  },
  "keywords": [
    "react",
    "component",
    "markdown",
    "editor",
    "text-editor",
    "markdown-editor"
  ],
  "author": "Javier Castro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jacargentina/react-mde.git/issues"
  },
  "dependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/node": "^7.16.7",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@cypress/webpack-preprocessor": "^5.11.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.10",
    "esbuild-serve": "^1.0.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "express": "^4.17.2",
    "file-loader": "^6.2.0",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-loader": "^4.13.0",
    "showdown": "^1.9.1",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-middleware": "^5.3.0",
    "webpack-hot-middleware": "^2.25.1",
    "webpack-stream": "^7.0.0"
  },
  "homepage": "https://github.com/jacargentina/react-mde.git#readme",
  "devDependencies": {
    "@simbathesailor/use-what-changed": "^2.0.0",
    "@testing-library/react": "^12.1.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/showdown": "^1.9.4",
    "@types/webpack-hot-middleware": "^2.25.5",
    "cypress": "^9.2.0",
    "esbuild-jest": "^0.5.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
