{
  "name": "@javier.alejandro.castro/react-mde",
  "version": "14.0.7",
  "description": "React Markdown Editor",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "prepare": "npm run build && npm run build-docs",
    "test": "jest",
    "build": "tsc && cp src/styles.css lib/styles.css",
    "build-docs": "esbuild --bundle ./docs/client.tsx --outfile=./docs/bundle.js --minify --charset=utf8",
    "dev": "node esbuild.config.js -w",
    "cypress:open": "cypress open",
    "lint": "eslint 'src/**'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacargentina/react-mde.git"
  },
  "keywords": [
    "react",
    "component",
    "markdown",
    "editor",
    "text-editor",
    "markdown-editor"
  ],
  "author": "Javier Castro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jacargentina/react-mde.git/issues"
  },
  "dependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.0",
    "@babel/eslint-parser": "^7.26.5",
    "@babel/node": "^7.26.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "babel-core": "^6.26.3",
    "babel-loader": "^9.2.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.24.2",
    "esbuild-serve": "^1.0.1",
    "eslint": "^9.18.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "express": "^4.21.2",
    "file-loader": "^6.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "react": "18.3",
    "react-dom": "18.3",
    "showdown": "^2.1.0"
  },
  "homepage": "https://github.com/jacargentina/react-mde.git#readme",
  "devDependencies": {
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.4",
    "@simbathesailor/use-what-changed": "^2.0.0",
    "@testing-library/react": "^16.2.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/showdown": "^2.0.6",
    "cypress": "^14.0.0",
    "esbuild-jest": "^0.5.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
