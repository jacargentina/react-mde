{
  "name": "@javier.alejandro.castro/react-mde",
  "version": "14.0.0",
  "description": "React Markdown Editor",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "prepare": "npm run build && npm run build-docs",
    "test": "jest",
    "build": "tsc && cp src/styles.css lib/styles.css",
    "build-docs": "esbuild --bundle ./docs/client.tsx --outfile=./docs/bundle.js --minify --charset=utf8",
    "dev": "node esbuild.config.js -w",
    "cypress:open": "cypress open",
    "lint": "eslint 'src/**'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacargentina/react-mde.git"
  },
  "keywords": [
    "react",
    "component",
    "markdown",
    "editor",
    "text-editor",
    "markdown-editor"
  ],
  "author": "Javier Castro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jacargentina/react-mde.git/issues"
  },
  "dependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.2",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/node": "^7.17.10",
    "@babel/plugin-proposal-class-properties": "^7.17.12",
    "@babel/plugin-transform-runtime": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.5",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.43",
    "esbuild-serve": "^1.0.1",
    "eslint": "^8.17.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "express": "^4.18.1",
    "file-loader": "^6.2.0",
    "jest": "^28.1.1",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "showdown": "^2.1.0"
  },
  "homepage": "https://github.com/jacargentina/react-mde.git#readme",
  "devDependencies": {
    "cypress": "^9.5.3",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.1.3",
    "@simbathesailor/use-what-changed": "^2.0.0",
    "@testing-library/react": "^13.3.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.1",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@types/showdown": "^2.0.0",
    "esbuild-jest": "^0.5.0",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  }
}
